 <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1551024709-8f23befc6f87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80)";>
  <div class="banner_container d-flex align-items-center justify-content-center flex-column">
    <h1><%= @cocktail.name.capitalize %></h1>
  </div>
</div>
<div class="container p5 mt-3">
  <p> <%= link_to 'back to all cocktails', cocktails_path %>
  <p> Ingredients: </p>
  <ul>
    <% @cocktail.ingredients.each do |ingredient| %>
      <li> <%= ingredient.name %> |
        <% ingredient.doses.each do |dose| %>
          <%=dose.description %> <%= link_to 'Delete', cocktail_dose_path(@cocktail, dose.id), method: :delete, data: {confirm: "Are you sure?"}%>
         <% end %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail), class:'btn btn-primary' %>
</div>
